<%- include ('./layouts/header_2.ejs') %>
<div id="print">
  <!-- Card animation start -->
  <section id="cardAnimation" class="cardAnimation">
    <div class="card">
          <div class="card-header" style="margin-bottom: 1rem;">
            <h4 style="font-family: Nanum Gothic;" >신도 상세 페이지</h4>
            <p style="font-family: Nanum Gothic;">신도카드 :     <%= familyData[0].name %>불자님의 번호 <%= familyData[0].sno %>-<%= mainData[0].sno %> </p>
            <button onClick="location.href='/useredit?searchData=<%= mainData[0].sno %>'" type="button" class="btn btn-warning btn-min-width box-shadow-4 mr-1 mb-1" style="font-family: Nanum Gothic;" >수정</button>
                  <button type="button" class="btn btn-danger btn-min-width box-shadow-4 mr-1 mb-1" style="font-family: Nanum Gothic;">삭제</button>
                  
     
    <div class="row">
    <div class="col-md-4 col-sm-12">
      <div class="card box-shadow-0" data-appear="appear" data-animation="zoomIn">
        <div class="card-header bg-primary white" >
          <h4 class="card-title white" style="font-family: Nanum Gothic;"> 대표자</h4>
          
        </div>
        
          <div class="card-body border-bottom-primary">
            <p class="card-text" style="font-family: Nanum Gothic;"><%= mainData[0].name %></p>
        
        </div>
      </div>
    </div>
    <div class="col-md-4 col-sm-12">
      <div class="card box-shadow-0" data-appear="appear" data-animation="zoomIn">
        <div class="card-header white bg-success">
          <h4 class="card-title white" style="font-family: Nanum Gothic;">불자 카드번호</h4>
          
        </div>
        
          <div class="card-body border-bottom-success">
            <p class="card-text" style="font-family: Nanum Gothic;"><%= mainData[0].sno %></p>
          
        </div>
      </div>
    </div>
    <div class="col-md-4 col-sm-12">
      <div class="card box-shadow-0" data-appear="appear" data-animation="zoomIn">
        <div class="card-header white bg-danger">
          <h4 class="card-title white" style="font-family: Nanum Gothic;">불자 주소</h4>
          
        </div>
        
          <div class="card-body border-bottom-danger">
            <p class="card-text" style="font-family: Nanum Gothic;"><%= mainData[0].address %></p>
          
        </div>
      </div>
    </div>
    <div class="col-md-4 col-sm-12">
      <div class="card box-shadow-0" data-appear="appear" data-animation="zoomIn">
        <div class="card-header white bg-warning">
          <h4 class="card-title white" style="font-family: Nanum Gothic;">불자 전화번호</h4>
          
        </div>
        
          <div class="card-body border-bottom-warning">
            <p class="card-text" style="font-family: Nanum Gothic;"><%= mainData[0].Phone %></p>
         
        </div>
      </div>
    </div>
    <div class="col-md-4 col-sm-12">
      <div class="card box-shadow-0" data-appear="appear" data-animation="zoomIn">
        <div class="card-header white bg-info">
          <h4 class="card-title white" style="font-family: Nanum Gothic;">불자 법명</h4>
          
        </div>
        
          <div class="card-body border-bottom-info">
            <p class="card-text" style="font-family: Nanum Gothic;"><%= mainData[0].hname %></p>
         
        </div>
      </div>
    </div>
    <div class="col-md-4 col-sm-12">
      <div class="card box-shadow-0" data-appear="appear" data-animation="zoomIn">
        <div class="card-header white bg-blue-grey"> 
            <h4 class="card-title text-white" style="font-family: Nanum Gothic;">모(母)신도</h4>   
        </div>
     
      </div>
    </div>
    <div class="col-md-6 col-sm-12">
        <div class="card" data-appear="appear" data-animation="zoomIn">
          <div class="card-header card-head-inverse bg-success">
            <h4 class="card-title text-white" style="font-family: Nanum Gothic;">메모</h4>
            
          </div>
         
            <div class="card-body border-bottom-success">
              <p class="card-text"> <%= mainData[0].memo %></p>
          
          </div>
        </div>
      </div>
      
  </div>

</div>
  </section>
  <!-- Card animation end -->
<!-- Restricted column ordering -->
<section id="column-ordering">
    <div class="row">
    <div class="col-12">
      <div class="card">
          <div class="card-header col-md-6" >
            <h4 style="font-family: Nanum Gothic; font-size: 2rem;" class="card-title">가족리스트</h4>
            <button type="button" class="btn btn-warning btn-min-width box-shadow-4 mr-1 mb-1" style="font-family: Nanum Gothic;" data-toggle="modal"
            data-target="#familyeditForm">수정</button>
            <button type="button" class="btn btn-danger btn-min-width box-shadow-4 mr-1 mb-1" style="font-family: Nanum Gothic;"  data-toggle="modal"
            data-target="#familyDeleteForm">삭제</button>
             <!-- Modal -->
             <div class="modal fade text-left" id="familyeditForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel33"
             aria-hidden="true">
               <div class="modal-dialog" role="document">
                 <div class="modal-content">
                   <div class="modal-header">
                     <label class="modal-title text-text-bold-600" id="myModalLabel33">Inline Login Form</label>
                     <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                       <span aria-hidden="true">&times;</span>
                     </button>
                   </div>
                   <form action="#">
                     <div class="modal-body">
                       <label>Email: </label>
                       <div class="form-group">
                         <input type="text" placeholder="Email Address" class="form-control">
                       </div>
                       <label>Password: </label>
                       <div class="form-group">
                         <input type="password" placeholder="Password" class="form-control">
                       </div>
                     </div>
                     <div class="modal-footer">
                       <input type="reset" class="btn btn-outline-secondary btn-lg" data-dismiss="modal"
                       value="close">
                       <input type="submit" class="btn btn-outline-primary btn-lg" value="Login">
                     </div>
                   </form>
                 </div>
               </div>
             </div>

             <div class="modal fade text-left" id="familyDeleteForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel33"
             aria-hidden="true">
               <div class="modal-dialog" role="document">
                 <div class="modal-content">
                   <div class="modal-header">
                     <label class="modal-title text-text-bold-600" id="myModalLabel33">Inline Login Form</label>
                     <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                       <span aria-hidden="true">&times;</span>
                     </button>
                   </div>
                   <form action="#">
                     <div class="modal-body">
                       <label>Email: </label>
                       <div class="form-group">
                         <input type="text" placeholder="Email Address" class="form-control">
                       </div>
                       <label>Password: </label>
                       <div class="form-group">
                         <input type="password" placeholder="Password" class="form-control">
                       </div>
                     </div>
                     <div class="modal-footer">
                       <input type="reset" class="btn btn-outline-secondary btn-lg" data-dismiss="modal"
                       value="close">
                       <input type="submit" class="btn btn-outline-primary btn-lg" value="Login">
                     </div>
                   </form>
                 </div>
               </div>
             </div>
          </div>
      
        <!-- <div class="card-content">
          <div class="card-body"> -->
         <!-- Table header styling start -->
<!-- <div class="row" id="header-styling"> -->
   
            <div class="card-body card-dashboard">
          <div class="table-responsive" style="margin-top: 15px;">
            <table class="table table-striped table-bordered zero-configuration" >
              <thead class="bg-success white">
                <tr>
                <% for(var i=0;i<headerName.length;i++) { %>
                  <th style="font-family: Nanum Gothic;"><%= headerName[i] %></th>
                <% } %>
                </tr>
              </thead>
              <tbody>
                <% for(var i=0; i<familyData.length ;i++ ){ %>
                <tr>
                <td><%= i+1 %></td>
                  <td><%= familyData[i].relation %></td>
                  <td><%= familyData[i].name %></td>
                  <td><%= familyData[i].bName %></td>
                  <td><%= familyData[i].sBirthDate %></td>
                  <td><%= familyData[i].hPhone %></td>
                  <td><%= familyData[i].job %></td>
                  <td><%= familyData[i].hpYN %></td>
                  <td><%= familyData[i].hpYN %></td>
                  <td><%= familyData[i].sno %></td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        
